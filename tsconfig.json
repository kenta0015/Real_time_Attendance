{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["ES2020"],
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"],
      "@app/*": ["app/*"],
      "@ui/*": ["src/ui/*"],
      "@styles/*": ["src/styles/*"],
      "@lib/*": ["lib/*"]
    }
  },
  "include": [
    "app/**/*",
    "src/**/*",
    "lib/**/*",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "app.config.js",
    "babel.config.js",
    "metro.config.js",
    "shims/**/*.js"
  ]
}
